<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Forecast$ForecastFragment" >

    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="@string/forecast_title"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/DayTitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/section_label"
        android:text="@string/day_1_sample"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/DayTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/DayTitle1"
        android:layout_below="@id/DayForecast1"
        android:layout_centerVertical="true"
        android:text="@string/day_2_sample"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/DayTitle3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/DayForecast2"
        android:text="@string/day_3_sample"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/DayForecast2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/DayTitle2"
        android:layout_toRightOf="@+id/DayTitle2"
        android:text="@string/forecast_sample" />

    <TextView
        android:id="@+id/DayForecast1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/DayTitle1"
        android:layout_toRightOf="@+id/DayTitle1"
        android:text="@string/forecast_sample" />

    <TextView
        android:id="@+id/DayForecast3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/DayTitle3"
        android:layout_toRightOf="@+id/DayTitle3"
        android:text="@string/forecast_sample" />

</RelativeLayout>